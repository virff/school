#include <stdio.h>

/* https://github.com/virff/school/blob/main/leasson_6 */

main() {
	
	// Hello 9 ðàç
	int i=0;
	
	while(i<9){
		
	printf("Hello\n");
	i=i+1;
	
	}
	
	printf("---\n");
	
	// ÷èñëà 0-9
	int a=0;
	
	while(a<15) {
		
	printf("%i\n",a);
	a=a+1;
	
	}
	
	printf("---\n");
	
	// òîëüêî íå÷¸òíûå
	int c=1;
	
	while(c<16) {
		
	printf("%i\n",c);
	c=c+2;
	
	}
	
		printf("---\n");
	
	// ñóììà ÷èñåë
	int e,sum;
	sum=0;
	e=5;
		
	while(e<16) {
		sum=sum+e;
		e=e+1;
	}
	printf("Summa 5-15 = %i",sum);
}
